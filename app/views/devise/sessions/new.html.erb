<div class="row ">
    <div class="column1 margin2"></div>
    <div class="column6 margin3">
        <div class="section form white shadow rc">
            <h2>Sign in</h2>

            <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
            <div class="value"><%= f.email_field :email, :autofocus => true, :placeholder => "Email" %></div>
            <div class="value"><%= f.password_field :password, :placeholder => "Password" %></div>
            <div class="value">
              <% if devise_mapping.rememberable? -%>
                <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
              <% end -%>
            </div>
            <div><%= f.submit "Sign in", :class => "btn big blue rc" %></div>
            <% end %>
            <h3>Login with Facebook or Register</h3>
            <div class="share-links">
                <%= render "devise/shared/links" %>
            </div>
        </div>
    </div>
</div>
